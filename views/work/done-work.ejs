<!DOCTYPE html>
<html>
<%-include ../base/checkHead.ejs%>
<style>
    .container{
        padding: 42px 0 0 0;
    }
    .mescroll{
        position: fixed;
        top: 42px;
        bottom: 0;
        height: auto;
    }
    .item{
        padding: 10px;
        border-bottom: 1px solid #bcbcbc;
        position: relative;
        display: block;
    }
    .item .circle{
        position: absolute;
        top:15px;
        left: 13px;
        background: #0071bd;
        width: 10px;
        height: 10px;
    }
    .item .anyou{
        line-height: 22px;
        color: #3b3b3b;
        text-indent: 20px;
        font-size: 13px;
    }
    .item .bottom{
        font-size: 12px;
        color: #0071bd;
        text-align: right;
        overflow-y: auto;
        padding-top: 3px;
    }
    .item .bottom .left{
        float: left;
        padding: 0 10px 0 0;
    }
    .item .bottom .right{
        float: right;
        padding: 0 5px;
    }
</style>
<body>
<div class="container">
    <%-include ../base/header.ejs%>
    <div class="wrap mescroll" id="mescroll">
        <div class="list-content">
            <%for(var i=0 ;i<dailywork_list.length;i++){%>
            <div class="item" id="<%=dailywork_list[i].dailywork_id%>">
                <span class="circle"></span>
                <p class="anyou"><%=dailywork_list[i].worktitle%></p>
                <p class="bottom">
                    <span class="left"><%= dailywork_list[i].worknumber%></span>
                    <span class="left"><%= dailywork_list[i].username%></span>
                    <span class="left"><%= dailywork_list[i].createdate%></span>
                </p>
            </div>
            <%}%>
        </div>
    </div>
</div>
</body>
<script>
    $(document).on('click','.item',function () {
        var id=$(this).attr("id")
        location.href='/doneDetail?id='+id
    })
    $(function () {
        var user=JSON.parse(sessionStorage.getItem('user'))
        var user_id=user.user_id
        var manager_id=user.manager_id
        var role_type=user.role_type
        var loadContent=sessionStorage.getItem("doneList");
        var doneList = sessionStorage.getItem("doneList")
        $(".list-content").append(doneList)
        var doneTop = sessionStorage.getItem("doneTop");
        $(".wrap").scrollTop(doneTop);
        $(".wrap").scroll(function () {
            sessionStorage.setItem("doneTop", $(this).scrollTop());
        });
        //创建MeScroll对象
        var mescroll = new MeScroll("mescroll", {
            down: {
                auto: false, //是否在初始化完毕之后自动执行下拉回调callback; 默认true
                callback: downCallback //下拉刷新的回调
            },
            up: {
                auto: false, //是否在初始化时以上拉加载的方式自动加载第一页数据; 默认false
                callback: upCallback //上拉回调,此处可简写; 相当于 callback: function (page) { upCallback(page); }
            }
        });

        /*下拉刷新的回调 */
        function downCallback() {
            sessionStorage.setItem("doneList", "");
            sessionStorage.setItem("doneTop", 0);
            window.location.reload()
        }

        function upCallback() {
            var params = {
                dailywork_list_kind: 4,
                manager_id: manager_id,
                role_type: role_type,
                user_id:user_id,
                startid: $(".item:last").attr("id"),
                num: 10,
                start: 0
            }
            var data = JSON.stringify(params)
            $.ajax({
                url: 'http://<%= reqHost %>:<%= reqPort %>/ZxApi/m3_05.ashx',
                type: "POST",
                dataType: 'json',
                data: data,
                error: function (request) {      // 设置表单提交出错
                    mui.toast("系统错误，返回状态码为：" + request.status);
                },
                success: function (data) {
                    if (data.ecode == 1000) {
                        var list = data.article_list
                        if (data.num > 0) {
                            mescroll.endSuccess(data.length);
                            $.each(list, function (i) {
                                var item = '<div class="item" id="' + list[i].dailywork_id + '">' +
                                    '<span class="circle"></span>' +
                                    '<p class="anyou">' + list[i].worktitle + '</p>' +
                                    '<p class="bottom">' +
                                    '<span class="left">' + list[i].worknumber + '</span>' +
                                    '<span class="left">' + list[i].username + '</span>' +
                                    '<span class="left">' + list[i].createdate + '</span>' +
                                    '</p>' +
                                    '</div>'
                                $(".list-content").append(item);
                                loadContent += item;
                            })
                            sessionStorage.setItem("doneList", loadContent);
                        } else {
                            mescroll.endUpScroll(true)
                        }
                    } else {
                        mui.toast("系统错误")
                        mescroll.endErr()
                    }
                }
            });
        }
    })
</script>
</html>
