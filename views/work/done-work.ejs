<!DOCTYPE html>
<html>
<%- include ../base/checkHead.ejs %>
<body>
<div class="container">
    <%- include ../base/header.ejs %>
    <div class="wrap">
        <%for(var i = 0;i<dailywork_list.length;i++){ %>
        <a class="item" href="/workDetail?type=todo&id=<%=dailywork_list[i].dailywork_id%>">
            <span class="circle"></span>
            <p class="anyou"><%= dailywork_list[i].worktitle%></p>
            <p class="bottom">
                <span class="left"><%= dailywork_list[i].worknumber%></span>
                <span class="left"><%= dailywork_list[i].username%></span>
                <span class="left"><%= dailywork_list[i].createdate%></span>
            </p>
        </a>
        <%}%>
    </div>
</div>
</body>
<style>
    .container {
        padding: 42px 0 0 0;
    }
    .item {
        padding: 10px;
        border-bottom: 1px solid #bcbcbc;
        position: relative;
        display: block;
    }
    .item .circle {
        position: absolute;
        top: 17px;
        left: 13px;
        background: #0071bd;
        width: 10px;
        height: 10px;
    }
    .item .anyou {
        line-height: 22px;
        color: #3b3b3b;
        text-indent: 20px;
        font-size: 13px;
        min-height: 22px;
    }
    .item .bottom{
        font-size: 12px;
        color: #0071bd;
        text-align: right;
        overflow-y: auto;
        padding-top: 3px;
    }
    .item .bottom .left{
        float: left;
        padding: 0 10px 0 0;
    }
    .item .bottom .right{
        float: right;
    }
</style>
</html>
