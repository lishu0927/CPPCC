<!DOCTYPE html>
<html>
<%-include ../base/checkHead.ejs%>
<style>
    .container{
        padding: 42px 0 0 0;
    }
    .wrap{
        color: #3b3b3b;
        padding: 5px 10px 60px 10px;
    }
    .desc-content{
        padding:10px;
    }
    .desc-content .title{
        font-size: 18px;
        color: #000;
    }
    .desc-content .time{
        color: #0071bd;
    }
    .proposal-content {
    }
    .proposal-content .row {
        display: flex;
        font-size: 14px;
        line-height: 40px;
        border-bottom: 1px solid #adaaaa;
    }
    .proposal-content .row .left {
        width: 75px;
        padding-left: 10px;
        color: #0071bd;
    }
    .proposal-content .row .right {
        flex: 1;
        padding-left: 15px;
    }
    .proposal-content .content-row{
        padding: 10px;
    }
    .proposal-content .content-row .desc{
        line-height: 24px;
        color: #0071bd;
    }
    .proposal-content .content-row .con{
        border: 1px solid #adaaaa;
        padding: 10px;
        font-size: 14px;
        border-radius: 4px;
    }
    .files-content {
        padding: 10px;
        border-bottom: 1px solid #adaaaa;
    }
    .files-content .title{
        color: #0071bd;
    }
    .file-list .item {
        display: flex;
        border: 1px solid #adaaaa;
        border-radius: 4px;
        margin: 10px 0;
        padding: 10px;
        align-items: center;
    }
    .file-list .item .left {
        width: 42px;
        margin-right: 10px;
    }
    .file-list .item .right{
        flex: 1;
        overflow: hidden;
    }
    .file-list .item .right .filename{
        color: #3b3b3b;
    }
    .file-list .item .download{
        font-size: 12px;
        border: 1px solid #adaaaa;
        border-radius: 3px;
        padding: 1px 4px;
    }
    .submit-content{
        margin-top: 20px;
    }
    .submit-content .row .desc{
        color: #0071bd;
        letter-spacing: 2px;
    }
    .submit-content .row textarea{
        border: 1px solid #00a0e9;
        padding: 5px 10px;
        font-size: 14px;
    }
    .bottom{
        position: fixed;
        height: 50px;
        width: 100%;
        bottom: 0;
        right: 0;
        background: #e1edfd;
        border: 1px solid #00a0e9;
    }
    .bottom .content{
        display: flex;
        justify-content: center;
        height: 50px;
        line-height: 50px;
    }
</style>
<body>
<div class="container">
    <%-include ../base/header.ejs%>
    <div class="wrap">
        <div class="type1" style="display: none">
            <div class="desc-content">
                <p class="title"><%=work.worktitle%></p>
                <p class="time"><%=work.createdate%></p>
            </div>
            <div class="proposal-content">
                <div class="row">
                    <span class="left">编号</span>
                    <span class="right"><%=work.worknumber%></span>
                </div>
                <div class="row">
                    <span class="left">发起人</span>
                    <span class="right"><%=work.username%></span>
                </div>
                <div class="row">
                    <span class="left">处理人</span>
                    <span class="right" id="leaders"></span>
                </div>
                <div class="row">
                    <span class="left">审核状态</span>
                    <span class="right"><%=work.state%></span>
                </div>
                <%if(attach_list.length>0){%>
                <div class="files-content">
                    <p class="title">附件</p>
                    <div class="file-list" id="files">
                        <%for(var i=0;i<attach_list.length;i++){%>
                        <div class='item'>
                            <img class='left' src='images/file.png' />
                            <div class='right filepath' id="<%=attach_list[i].fileid%>" data-url="<%=attach_list[i].filepath%>">
                                <p class='filename mui-ellipsis'><%=attach_list[i].filename%></p>
                                <p class='filesize' data-bytes="<%=attach_list[i].filesize%>"><%=(attach_list[i].filesize/1000/1000).toFixed(2)%>M</p>
                            </div>
                            <span class="download" data-name="<%=attach_list[i].filename%>" data-url="<%=attach_list[i].filepath%>">保存</span>
                        </div>
                        <%}%>
                    </div>
                </div>
                <%}%>
                <div class="content-row">
                    <p class="desc">内容</p>
                    <div class="con"><%=work.workcontent%></div>
                </div>
            </div>
        </div>
        <div class="type2" style="display: none">
            <div class="desc-content">
                <p class="title"><%=work.worktitle%></p>
                <p class="time"><%=work.createdate%></p>
            </div>
            <div class="proposal-content">
                <div class="row">
                    <span class="left">编号</span>
                    <span class="right"><%=work.worknumber%></span>
                </div>
                <div class="row">
                    <span class="left">发起人</span>
                    <span class="right"><%=work.username%></span>
                </div>
                <%if(attach_list.length>0){%>
                <div class="files-content">
                    <p class="title">附件</p>
                    <div class="file-list" id="files">
                        <%for(var i=0;i<attach_list.length;i++){%>
                        <div class='item'>
                            <img class='left' src='images/file.png' />
                            <div class='right filepath' id="<%=attach_list[i].fileid%>" data-url="<%=attach_list[i].filepath%>">
                                <p class='filename'><%=attach_list[i].filename%></p>
                                <p class='filesize' data-bytes="<%=attach_list[i].filesize%>"><%=(attach_list[i].filesize/1000/1000).toFixed(2)%>M</p>
                            </div>
                            <span class="download" data-name="<%=attach_list[i].filename%>" data-url="<%=attach_list[i].filepath%>">保存</span>
                        </div>
                        <%}%>
                    </div>
                </div>
                <%}%>
                <div class="content-row">
                    <p class="desc">内容</p>
                    <div class="con"><%=work.workcontent%></div>
                </div>
            </div>
            <div class="submit-content">
                <div class="row">
                    <p class="desc">处理意见</p>
                    <textarea placeholder="" rows="5" id="suggestion" maxlength="250"></textarea>
                </div>
            </div>
            <div class="bottom">
                <div class="content" id="submit">
                    我要审批
                </div>
            </div>
        </div>
    </div>
</div>
</body>
<script>

    $(document).on('click','.download',function (e) {
        e.preventDefault()
        e.stopPropagation()
        var download_url=$(this).attr("data-url")
        var filename=$(this).attr("data-name")
        try {
            window.native.setDownload(filename,download_url)
        }catch (err){
            mui.toast("下载失败")
        }
        mui.toast("正在下载")
    })
    $(function() {
        var sSId=sessionStorage.getItem('user_id') //当前用户

        //取出处理人
        var leaderStr='';
        var str="<%=leaders%>";
        str=str.replace(/&#34;/g, '"');
        var leaders=JSON.parse(str);
        var flag=0;
        for(var i=0;i<leaders.length;i++){
            if(leaders[i].touserid==sSId){ //取出的处理人中是否有自己
                flag=1;
            }
            leaderStr+=leaders[i].tousername+" , "
        }
        $("#leaders").html(leaderStr.slice(0,-2));

        if(flag==0){
            $(".type1").css("display","block")
        }else{
            $(".type2").css("display","block")
        }


        var dailywork_id="<%=work.dailywork_id%>";
        var touserid=sSId;
        var suggestion;
        $("#submit").click(function () {
            suggestion=$.trim($("#suggestion").val());
            if(suggestion == null||suggestion==""){
                mui.toast("请填写处理意见")
                return;
            }else {
                var params = {
                    dailywork_id: dailywork_id,
                    touserid: touserid,
                    suggestion: suggestion
                }
                var data = JSON.stringify(params)
                $.ajax({
                    url: 'http://<%=reqHost%>:<%=reqPort%>/ZxApi/m3_09.ashx',
                    type: "POST",
                    dataType: 'json',
                    data: data,
                    error: function (request) {      // 设置表单提交出错
                        mui.toast("系统错误，返回状态码为：" + request.status);
                    },
                    success: function (data) {
                        if(data.ecode==1000){
                            mui.toast("审批成功！");
                            setTimeout(function () {
                                history.go(-1)
                            },1000);
                        }else{
                            mui.toast("审批失败！");
                        }
                    }
                });
            }
        })
    })
</script>
</html>
