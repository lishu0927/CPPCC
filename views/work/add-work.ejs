<!DOCTYPE html>
<html>
<%- include ../base/checkHead.ejs %>
<script type='text/javascript' src='/js/jquery.form.js'></script>
<body>
<div class="container">
    <%- include ../base/header.ejs %>
    <div class="wrap">
        <div class="proposal-content">
            <div class="row">
                <span class="left">编号</span>
                <span class="right" id="num"></span>
            </div>
            <div class="row">
                <span class="left">发起人</span>
                <span class="right" id="name"></span>
            </div>
            <div class="row">
                <span class="left">发起日期</span>
                <span class="right" id="date"></span>
            </div>
            <div class="row">
                <span class="left">文件标题</span>
                <span class="right">
                    <textarea id="title" placeholder="" rows="1"></textarea>
                </span>
            </div>
            <div class="row">
                <span class="left">内容</span>
                <span class="right"><textarea id="content" placeholder="" rows="2"></textarea></span>
            </div>
            <div class="row">
                <span class="left">选择处理人</span>
                <span class="right">
                    <div id="leaders">
                    </div>
                </span>
            </div>
        </div>
        <div class="other-files">
            <div class="upload">
                添加附件
                <form action="http://114.215.98.96:8011/ZxApi/uploadfile.aspx" enctype="multipart/form-data"
                      method="post" id="uploadForm">
                <input type="file" name="file" id="upload"/>
                </form>
            </div>
            <div class="file-list" id="files">
            </div>
        </div>
    </div>
    <div class="bottom">
        <div class="content" id="submit">
            <div class="left">保存草稿</div>
            <div class="right">完成提交</div>
        </div>
    </div>
</div>
</body>
<style>
    .container {
        padding: 42px 0 50px 0;
    }
    .wrap {
        color: #3b3b3b;
        padding: 5px 10px;
    }
    .wrap p {
        color: #585757;
        line-height: 24px;
    }
    .wrap p.text-right {
        text-align: right;
    }
    .other-files{
        margin-top: 20px;
    }
    .upload {
        position: relative;
        display: inline-block;
        background: #0071bd;
        border-radius: 3px;
        padding: 5px 8px;
        color: #fff;
        font-size: 14px;
    }
    .upload input {
        position: absolute;
        width: 100%;
        height: 100%;
        opacity: 0;
    }
    .file-list .item {
        display: flex;
        border: 1px solid #0071bd;
        border-radius: 4px;
        margin-top: 10px;
        align-items: center;
    }
    .file-list .item .left {
        width: 90px;
        text-align: center;
    }
    .file-list .item .right {
        border-left: 1px solid #adaaaa;
        padding-left: 10px;
    }
    .proposal-content {
        border-bottom: 1px solid #adaaaa;
        margin-top: 10px;
    }
    .proposal-content .row {
        display: flex;
        font-size: 14px;
        color: #585757;
        line-height: 30px;
        align-items: center;
        border: 1px solid #adaaaa;
        border-bottom: 0;
    }
    .proposal-content .row .left {
        width: 110px;
        text-align: center;
    }
    .proposal-content .row .right {
        flex: 1;
        border-left: 1px solid #adaaaa;
        padding: 5px;
        min-height: 30px;
        max-height: 100px;
        overflow-y: auto;
    }
    .proposal-content .row .right textarea {
        margin: 0;
        font-size: 14px;
    }
    .bottom {
        position: fixed;
        height: 50px;
        width: 100%;
        bottom: 0;
        right: 0;
        background: #e1edfd;
        border: 1px solid #00a0e9;
    }
    .bottom .content {
        display: flex;
        text-align: center;
        height: 50px;
        line-height: 50px;
    }
    .bottom .content .left {
        width: 40%;
        border-right: 1px solid #00a0e9;
    }
    .bottom .content .right {
        flex: 1;
    }
</style>
<script>
    $(function () {
        $("#leaders").html("");
        $.ajax({  //取分组
            url: 'http://114.215.98.96:8011/ZxApi/m3_07.ashx',
            type: "POST",
            dataType: 'json',
            data: {},
            error: function (request) {      // 设置表单提交出错
                mui.toast("系统错误");
            },
            success: function (data) {
                if (data.ecode == 1000) {
                    var list = data.leader_list;
                    $.each(list, function (i) {
                        var item = ' <div class="mui-input-row mui-checkbox">' +
                            '<label>' + list[i].user_name + '</label>' +
                            '<input name="leader" value="' + list[i].user_name + '" id=' + list[i].user_id + ' type="checkbox"  >' +
                            '</div>'
                        $("#leaders").append(item);
                    })
                }
            }
        });

        $('#uploadForm').ajaxForm(function(data) {
            data= JSON.parse(data);
            if(data.ecode==1000){
                var rootEle = document.getElementById("upload");
                var temp = rootEle.files[0].name.split(".");
                var bytes = rootEle.files[0].size
                var size = bytes / 1024 / 1024;
                size = size.toFixed(2);
                var $div1 = $("<div class='item'></div>");
                var $div2 = $("<div class='left' data-type='" + temp[1] + "'>" + temp[1] + "</div>");
                var $div3 = $("<div class='right filepath' data-url='"+data.imgurl_list[0].imgurl+"'></div>");
                var $p1 = $("<p class='filename' >" + rootEle.files[0].name + "</p>");
                var $p2 = $("<p class='filesize' data-bytes='"+bytes+"'>" + size + "M</p>");
                $div3.append($p1);
                $div3.append($p2);
                $div1.append($div2);
                $div1.append($div3);
                $('#files').append($div1);
            }else{
                alert("上传失败！");
            }
        });
        $('#upload').change(function () {
            $('#uploadForm').submit();
        });



        var user = JSON.parse(sessionStorage.getItem('user'))
        var user_name = user.user_name;
        var user_id = user.user_id;
        var date = new Date();
        var currentDate = date.getFullYear() + "/" + (date.getMonth() + 1) + "/" + date.getDate()
        $("#name").html(user_name);
        $("#date").html(currentDate);
        $("#submit div").each(function () {
            $(this).click(function () {
                var tijiao_kind, dailywork_id, worktitle, workcontent, createuserid, username, createdate;
                var dailyworkattach_list = [], dailyworkuser_list = [];
                createuserid = user_id;
                username = user_name;
                createdate = currentDate;
                worktitle = $("#title").val();
                workcontent = $("#content").val();
                $('input[name="leader"]:checked').each(function () {
                    var leader =
                        {
                            tousername: $(this).val(),
                            touserid: $(this).attr("id"),
                            dailywork_id: 0,
                            workuserid: 0
                        };
                    dailyworkuser_list.push(leader);
                });
                $('#files .item .right').each(function () {
                    var files=
                        {
                            dailywork_id: 0,
                            fileid: 0,
                            filename: $(this).find(".filename").html(),
                            filepath: $(this).attr("data-url"),
                            filesize: $(this).find(".filesize").attr("data-bytes")
                        }
                    dailyworkattach_list.push(files);
                })
                if ($(this).text() == '完成提交') {
                    tijiao_kind = 2;
                    dailywork_id = 0;
                } else if ($(this).text() == '保存草稿') {
                    tijiao_kind = 1;
                    dailywork_id = 0;
                }
                if (worktitle == "" || workcontent == "") {
                    mui.toast("请填写完整")
                    return;
                } else if (dailyworkuser_list.length == 0) {
                    mui.toast("请选择审批人员")
                    return;
                } else {
                    var params = {
                        tijiao_kind: tijiao_kind,
                        dailywork_id: dailywork_id,
                        worktitle: worktitle,
                        workcontent: workcontent,
                        createuserid: createuserid,
                        username: username,
                        createdate: createdate,
                        dailyworkattach_list: dailyworkattach_list,
                        dailyworkuser_list: dailyworkuser_list
                    }
                    var data = JSON.stringify(params)
                    $.ajax({
                        url: 'http://114.215.98.96:8011/ZxApi/m3_08.ashx',
                        type: "POST",
                        dataType: 'json',
                        data: data,
                        error: function (request) {      // 设置表单提交出错
                            mui.toast("系统错误，返回状态码为：" + request.status);
                        },
                        success: function (data) {
                            if(data.ecode==1000){
                                mui.toast("操作成功！");
                                setTimeout(function () {
                                    history.go(-1)
                                },1000);
                            }else{
                                mui.toast("操作失败！");
                            }
                        }
                    });
                }
            })
        })
    })
</script>
</html>
