<!DOCTYPE html>
<html>
<%-include ../base/checkHead.ejs%>
<style>
    .container{
        padding: 82px 0 0 0;
    }
    .header-right{
        position: absolute;
        z-index: 10000000;
        height: 42px;
        text-align: center;
        line-height: 42px;
        top:0;
        right: 0;
        padding: 0 15px 0 10px;
        color: #fff;
        font-size: 14px;
    }
    .item{
        padding: 10px;
        border-bottom: 1px solid #bcbcbc;
        position: relative;
        display: block;
    }
    .item .circle{
        position: absolute;
        top:17px;
        left: 13px;
        background: #0071bd;
        width: 10px;
        height: 10px;
    }
    .item .anyou{
        line-height: 22px;
        color: #3b3b3b;
        text-indent: 20px;
        font-size: 13px;
    }
    .item .bottom{
        font-size: 12px;
        color: #0071bd;
        text-align: right;
        overflow-y: auto;
        padding-top: 3px;
    }
    .item .bottom .left{
        float: left;
        padding: 0 10px 0 0;
    }
    .item .bottom .right{
        float: right;
    }
    .states-content{
        position: fixed;
        top:42px;
        width: 100%;
        height: 40px;
        z-index: 1000000;
    }
    .list-tab{
        display: flex;
        border:1px solid #0071bd;
        height: 40px;
        padding: 5px 0;
    }
    .list-tab .tab-item{
        flex: 1;
        height: 100%;
        float: left;
        line-height: 30px;
        text-align: center;
        color: #585757;
        font-size: 14px;
        border-right: 1px solid #0071bd;
        cursor: pointer;
    }
    .list-tab .tab-item:last-child{
        border-right: 0;
    }
    .list-tab .tab-item.active{
        color: #0071bd;
    }
    .bottom{
        position: fixed;
        height: 50px;
        width: 100%;
        bottom: 0;
        right: 0;
        background: #e1edfd;
        border: 1px solid #00a0e9;
    }
    .bottom .content{
        display: flex;
        justify-content: center;
        align-items: center;
        height: 50px;
    }
</style>
<body>
<div class="container">
    <%-include ../base/header.ejs%>
    <a class="header-right" href="/socialCheck?tabIndex=0">信息审核</a>
    <div class="wrap">
        <div class="states-content">
            <div class="list-tab">
                <span class="tab-item active" id="item1">草稿</span>
                <span class="tab-item" id="item2">申请审核</span>
                <span class="tab-item" id="item3">通过</span>
                <span class="tab-item" id="item4">退回</span>
            </div>
        </div>
        <div class="list-content" id="list-content">
        </div>
        <div class="bottom">
            <div class="content" id="submit" onclick="location.href='/submitDetail'">
                提交信息
            </div>
        </div>
    </div>
</div>
</body>

<script>
    var sqmy_list_kind,sqmy_kind,detail_type;
    $(".tab-item").each(function (i) {
        $(this).click(function () {
            window.history.replaceState({},0,window.location.href.split("?")[0]+"?tabIndex="+i)
            $(this).addClass("active");
            $(this).siblings().attr("class","tab-item");
            var itemId=$(this).attr("id");
            if(itemId=='item1'){
                sqmy_list_kind=1
                sqmy_kind=1
                detail_type=1
            }else if(itemId=='item2'){
                sqmy_list_kind=2
                sqmy_kind=2
                detail_type=2
            }else if(itemId=='item3'){
                sqmy_list_kind=3
                sqmy_kind=3
                detail_type=2
            }else if(itemId=='item4'){
                sqmy_list_kind=6
                sqmy_kind=4
                detail_type=2
            }else{
                return ;
            }
            var params = {sqmy_list_kind:sqmy_list_kind}
            var data = JSON.stringify(params)
            $.ajax({
                url: 'http://114.215.98.96:8011/ZxApi/m2_23.ashx',
                type: "POST",
                dataType: 'json',
                data: data,
                error: function (request) {      // 设置表单提交出错
                    mui.toast("系统错误，返回状态码为：" + request.status);
                },
                success: function (data) {
                    if(data.ecode==1000){
                        $("#list-content").html("");
                        var list=data.sqmy_list
                        $.each(list, function (i) {
                            var item='<a class="item" href="/submitDetail'+detail_type+'?id='+list[i].sqmy_id +'&sqmy_kind='+sqmy_kind+'">' +
                                '<span class="circle"></span>' +
                                '<p class="anyou">'+list[i].ideatitle+'</p>' +
                                '<p class="bottom">' +
                                '<span class="left">'+list[i].statecode+'</span>' +
                                '<span class="left">'+ list[i].createtime.split(" ")[0] +'</span>' +
                                '</p>' +
                                '</a>'
                            $("#list-content").append(item);
                        })
                    }
                }
            });
        })
    })
    $(function () {
        var tabIndex="<%=tabIndex%>"
        $(".tab-item").eq(tabIndex).click();
    })
</script>
</html>
