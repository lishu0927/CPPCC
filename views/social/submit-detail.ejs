<!DOCTYPE html>
<html>
<%-include ../base/checkHead.ejs%>
<body>
<div class="container">
    <%-include ../base/header.ejs%>
    <div class="wrap">
        <div class="proposal-content">
            <div class="row">
                <span class="left">姓名</span>
                <span class="right" id="name"></span>
            </div>
            <div class="row">
                <span class="left">单位</span>
                <span class="right" id="fax"></span>
            </div>
            <div class="row">
                <span class="left">组别</span>
                <span class="right" id="group"></span>
            </div>
        </div>
        <div class="submit-content">
            <div class="row">
                <p class="desc">事由</p>
                <textarea placeholder="" rows="1" id="title"></textarea>
            </div>
            <div class="row">
                <p class="desc">内容简介</p>
                <textarea placeholder="" rows="3" id="content"></textarea>
            </div>
        </div>
    </div>
    <div class="bottom">
        <div class="content" id="submit">
            <div class="left">保存</div>
            <div class="right">提交</div>
        </div>
    </div>
</div>
</body>
<style>
    .container{
        padding: 42px 0 50px 0;
    }
    .wrap{
        color: #3b3b3b;
        padding: 5px 10px;
    }
    .wrap p{
        color: #585757;
        line-height: 24px;
    }
    .wrap p.text-right{
        text-align: right;
    }
    .proposal-content{
        border-bottom: 1px solid #adaaaa;
        margin-top: 10px;
    }
    .proposal-content .row{
        display: flex;
        font-size: 14px;
        color: #585757;
        line-height: 30px;
        align-items: center;
        border: 1px solid #adaaaa;
        border-bottom: 0;
    }
    .proposal-content .row .left{
        width: 110px;
        text-align: center;
    }
    .proposal-content .row .right{
        flex: 1;
        border-left: 1px solid #adaaaa;
        padding: 5px;
        min-height: 30px;
    }
    .submit-content{
        margin-top: 10px;
    }
    .submit-content .row .desc{
        color: #0071bd;
        letter-spacing: 2px;
    }
    .submit-content .row textarea{
        border: 1px solid #00a0e9;
        padding: 5px 10px;
        font-size: 14px;
    }
    .bottom{
        position: fixed;
        height: 50px;
        width: 100%;
        bottom: 0;
        right: 0;
        background: #e1edfd;
        border: 1px solid #00a0e9;
    }
    .bottom .content{
        display: flex;
        text-align: center;
        height: 50px;
        line-height: 50px;
    }
    .bottom .content .left{
        width: 100px;
        border-right: 1px solid #00a0e9;
    }
    .bottom .content .right{
        flex: 1;
    }
</style>
<script>
    var userid,username,fax,groupName,tijiao_kind,sqmy_id,ideatitle,ideacontent;
    userid=sessionStorage.getItem('user_id');
    username=sessionStorage.getItem('user_name');
    fax=sessionStorage.getItem('fax');
    groupName=sessionStorage.getItem('groupName');
    $("#name").html(username)
    $("#fax").html(fax)
    $("#groupName").html(groupName)
    $("#submit div").each(function () {
        $(this).click(function () {
            ideatitle=$("#title").val();
            ideacontent=$("#content").val();
            if($(this).text()=='提交'){
                tijiao_kind=2;
                sqmy_id=0;
            }else if($(this).text()=='保存'){
                tijiao_kind=1;
                sqmy_id=0;
            }
            if(ideatitle == null||ideacontent==null){
                mui.toast("请填写完整")
                return;
            }else {
                var params = {
                    tijiao_kind: tijiao_kind,
                    sqmy_id: sqmy_id,
                    userid: userid,
                    username: username,
                    ideatitle: ideatitle,
                    ideacontent: ideacontent
                }
                var data = JSON.stringify(params)
                $.ajax({
                    url: 'http://114.215.98.96:8011/ZxApi/m2_24.ashx',
                    type: "POST",
                    dataType: 'json',
                    data: data,
                    error: function (request) {      // 设置表单提交出错
                        mui.toast("系统错误，返回状态码为：" + request.status);
                    },
                    success: function (data) {
                        if(data.ecode==1000){
                            mui.toast('操作成功');
                        }
                    }
                });
            }
        })
    })
</script>
</html>
