<!DOCTYPE html>
<html>
<%-include ../base/checkHead.ejs%>
<style>
    .container{
        padding: 136px 0 0 0;
    }
    .header-right{
        position: absolute;
        z-index: 10000000;
        height: 42px;
        text-align: center;
        line-height: 42px;
        top:0;
        right: 0;
        padding: 0 15px 0 10px;
        color: #fff;
        font-size: 14px;
    }
    .proposals-search{
        padding:10px 15px;
        position: fixed;
        top: 42px;
        width: 100%;
        z-index: 100000;
    }
    .item{
        padding: 10px;
        border-bottom: 1px solid #bcbcbc;
        position: relative;
        display: block;
        min-height: 44px;
    }
    .item .circle{
        position: absolute;
        top:17px;
        left: 13px;
        background: #0071bd;
        width: 10px;
        height: 10px;
    }
    .item .anyou{
        line-height: 22px;
        color: #3b3b3b;
        text-indent: 20px;
        font-size: 13px;
        min-height: 22px;
    }
    .item .bottom{
        font-size: 12px;
        color: #0071bd;
        text-align: right;
        overflow-y: auto;
        padding-top: 3px;
    }
    .item .bottom .left{
        float: left;
        padding: 0 10px 0 0;
    }
    .item .bottom .right{
        float: right;
    }
    .states-content{
        position: fixed;
        top:96px;
        width: 100%;
        height: 40px;
        z-index: 100000;
    }
    .list-tab{
        display: flex;
        background: #0071bd;
        height: 40px;
        padding: 5px 0;
    }
    .list-tab .tab-item{
        flex: 1;
        height: 100%;
        float: left;
        line-height: 30px;
        text-align: center;
        color: #9a9898;
        font-size: 14px;
        border-right: 1px solid #fff;
        cursor: pointer;
    }
    .list-tab .tab-item:last-child{
        border-right: 0;
    }
    .list-tab .tab-item.active{
        color: #fff;
    }
</style>
<body>
<div class="container">
    <%-include ../base/header.ejs%>
    <a class="header-right" href="/proposalCheck?tabIndex=0">审核提案</a>
    <div class="wrap">
        <div class="proposals-search">
            <%-include ../base/search-box.ejs%>
        </div>
        <div class="states-content">
            <div class="list-tab">
                <span class="tab-item active" id="item1">草稿</span>
                <span class="tab-item" id="item2">申请审核</span>
                <span class="tab-item" id="item3">修改重提</span>
                <span class="tab-item" id="item4">恭喜立案</span>
                <span class="tab-item" id="item5">退回</span>
            </div>
        </div>
        <div class="list-content" id="list-content">
        </div>
    </div>
</div>
</body>
<script>
    var tian_list_kind;
    var detail_id;
    $(".tab-item").each(function (i) {
        $(this).click(function () {
            window.history.replaceState({},0,window.location.href.split("?")[0]+"?tabIndex="+i)
            $(this).addClass("active");
            $(this).siblings().attr("class","tab-item");
            var itemId=$(this).attr("id");
            if(itemId=='item1'){
                tian_list_kind=1
                detail_id=1
            }else if(itemId=='item2'){
                tian_list_kind=2
                detail_id=2
            }else if(itemId=='item3'){
                tian_list_kind=4
                detail_id=3
            }else if(itemId=='item4'){
                tian_list_kind=3
                detail_id=4
            }else if(itemId=='item5'){
                tian_list_kind=5
                detail_id=5
            }else{
                return ;
            }
            var params = {tian_list_kind:tian_list_kind}
            var data = JSON.stringify(params)
            $.ajax({
                url: 'http://114.215.98.96:8011/ZxApi/m2_12.ashx',
                type: "POST",
                dataType: 'json',
                data: data,
                error: function (request) {      // 设置表单提交出错
                    mui.toast("系统错误，返回状态码为：" + request.status);
                },
                success: function (data) {
                    if(data.ecode==1000){
                        $("#list-content").html("");
                        var list=data.tian_list
                        $.each(list, function (i) {
                            var item='<a class="item" href="/proposalDetail'+detail_id+'?id='+list[i].tian_id +'&type=1&zhuangtai='+list[i].zhuangtai+'">' +
                                '<span class="circle"></span>' +
                                '<p class="anyou">'+list[i].anyou+'</p>' +
                                '<p class="bottom">' +
                                '<span class="left">'+list[i].zhuangtai+'</span>' +
                                '<span class="left">'+ list[i].creattime.split(" ")[0] +'</span>' +
                                '<span class="right">下载</span>' +
                                '</p>' +
                                '</a>'
                            $("#list-content").append(item);
                        })
                    }
                }
            });
        })
    })
    $(function () {
        var tabIndex="<%=tabIndex%>"
        $(".tab-item").eq(tabIndex).click();
    })
</script>
</html>
