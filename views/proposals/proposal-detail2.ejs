<!DOCTYPE html>
<html>
<%-include ../base/checkHead.ejs%>
<style>
    .container{
        padding: 42px 0 0 0;
    }
    .wrap{
        color: #3b3b3b;
        padding: 5px 10px;
    }
    .proposal-content{
        border-bottom: 1px solid #adaaaa;
        margin-top: 10px;
    }
    .proposal-content .row{
        display: flex;
        font-size: 14px;
        color: #585757;
        line-height: 30px;
        align-items: center;
        border: 1px solid #adaaaa;
        border-bottom: 0;
    }
    .proposal-content .row .left{
        width: 110px;
        text-align: center;
    }
    .proposal-content .row .right{
        flex: 1;
        border-left: 1px solid #adaaaa;
        padding: 5px;
        min-height: 30px;
    }
    .proposal-content .row .right input{
        margin: 0 !important;
        text-indent: 10px;
    }
    .reject-content{
        margin-top: 20px;
        padding-bottom: 50px;
    }
    .reject-content textarea{
        border: 1px solid #00a0e9;
        padding: 5px 10px;
        font-size: 14px;
    }
    .bottom{
        position: fixed;
        height: 50px;
        width: 100%;
        bottom: 0;
        right: 0;
        background: #e1edfd;
        border: 1px solid #00a0e9;
    }
    .bottom .content{
        display: flex;
        text-align: center;
        height: 50px;
        line-height: 50px;
    }
    .bottom .content .left{
        width: 100px;
        border-right: 1px solid #00a0e9;
    }
    .bottom .content .right{
        flex: 1;
    }
</style>
<body>
<div class="container">
    <%-include ../base/header.ejs%>
    <div class="wrap">
        <div class="proposal-content">
            <%if(type==2){%>
            <div class="row">
                <span class="left">立案编号</span>
                <span class="right"><input type="text" id="num" /></span>
            </div>
            <%}%>
            <div class="row">
                <span class="left">案由</span>
                <span class="right"><%=tian.anyou%></span>
            </div>
            <div class="row">
                <span class="left">提案人姓名</span>
                <span class="right"><%=tian.tianername%></span>
            </div>
            <div class="row">
                <span class="left">单位</span>
                <span class="right"><%=tian.company%></span>
            </div>
            <div class="row">
                <span class="left">委员证件号</span>
                <span class="right"><%=tian.weinum%></span>
            </div>
            <div class="row">
                <span class="left">电话号码</span>
                <span class="right"><%=tian.mobile%></span>
            </div>
            <div class="row">
                <span class="left">问题</span>
                <span class="right"><%=tian.problem%></span>
            </div>
            <div class="row">
                <span class="left">分析</span>
                <span class="right"><%=tian.analyse%></span>
            </div>
            <div class="row">
                <span class="left">建议</span>
                <span class="right"><%=tian.advice%></span>
            </div>
        </div>
        <%if(type==2){%>
        <div class="reject-content">
            <textarea id="tuihui" rows="4" placeholder="请填写退回理由"></textarea>
        </div>
        <div class="bottom">
            <div class="content" id="submit">
                <div class="left">退回</div>
                <div class="right">通过立案</div>
            </div>
        </div>
        <%}%>
    </div>
</div>
</body>
<script>
    $(function() {
        var audit_jieguo;
        var tian_id="<%=tian.tian_id%>";
        var tuihui,tian_num;
        $("#submit div").each(function () {
            $(this).click(function () {
                if($(this).text()=='退回'){
                    tuihui=$("#tuihui").val();
                    if(tuihui == null||tuihui==""){
                        mui.toast("请填写退回理由")
                        return;
                    }
                    tian_num="";
                    audit_jieguo=0;
                }else if($(this).text()=='通过立案'){
                    tuihui="";
                    audit_jieguo=1;
                    tian_num=$("#num").val();
                }
                var params = {
                    audit_jieguo: audit_jieguo,
                    tian_id: tian_id,
                    tian_num:tian_num,
                    tuihui: tuihui
                }
                var data = JSON.stringify(params)
                $.ajax({
                    url: 'http://<%=reqHost%>:<%=reqPort%>/ZxApi/m2_18.ashx',
                    type: "POST",
                    dataType: 'json',
                    data: data,
                    error: function (request) {      // 设置表单提交出错
                        mui.toast("系统错误，返回状态码为：" + request.status);
                    },
                    success: function (data) {
                        if(data.ecode==1000){
                            mui.toast("操作成功！");
                            setTimeout(function () {
                                history.go(-1)
                            },1000);
                        }else{
                            mui.toast("操作失败！");
                        }
                    }
                });
            })
        })
    })
</script>
<style>


</style>
</html>
