<!DOCTYPE html>
<html>
    <%-include ../base/checkHead.ejs%>
<body>
<div class="container">
    <%-include ../base/header.ejs%>
    <div class="wrap">
        <div class="proposals-search">
            <%-include ../base/search-box.ejs%>
        </div>
        <div class="list-content" id="list-content">
            <%for(var i=0 ;i<tian_list.length;i++){%>
            <a class="item" href="/proposalDetail1?id=<%=tian_list[i].tian_id%>">
                <span class="circle"></span>
                <p class="anyou"><%=tian_list[i].anyou%></p>
                <p class="bottom">
                    <span class="left">保存</span>
                    <span class="left"><%=tian_list[i].creattime.split(' ')[0]%></span>
                    <span class="right">下载</span>
                </p>
            </a>
            <%}%>
        </div>
    </div>
</div>
</body>
<style>
    .container{
        padding: 96px 0 0 0;
    }
    .proposals-search{
        padding:10px 15px;
        position: fixed;
        top: 42px;
        width: 100%;
    }
    .item{
        padding: 10px;
        border-bottom: 1px solid #bcbcbc;
        position: relative;
        display: block;
    }
    .item .circle{
        position: absolute;
        top:17px;
        left: 13px;
        background: #0071bd;
        width: 10px;
        height: 10px;
    }
    .item .anyou{
        line-height: 22px;
        color: #3b3b3b;
        text-indent: 20px;
        font-size: 13px;
        min-height: 22px;
    }
    .item .bottom{
        font-size: 12px;
        color: #0071bd;
        text-align: right;
        overflow-y: auto;
        padding-top: 3px;
    }
    .item .bottom .left{
        float: left;
        padding: 0 10px 0 0;
    }
    .item .bottom .right{
        float: right;
    }
</style>
<script>
    var tian_list_kind;
    var detail_id;
    $(".tab-item").each(function () {
        $(this).click(function () {
            $(this).addClass("active");
            $(this).siblings().attr("class","tab-item");
            var itemId=$(this).attr("id");
            if(itemId=='item1'){
                tian_list_kind=1
                detail_id=1
            }else if(itemId=='item2'){
                tian_list_kind=2
                detail_id=2
            }else if(itemId=='item3'){
                tian_list_kind=4
                detail_id=3
            }else if(itemId=='item4'){
                tian_list_kind=3
                detail_id=4
            }else if(itemId=='item5'){
                tian_list_kind=5
                detail_id=5
            }
            var params = {tian_list_kind:tian_list_kind}
            var data = JSON.stringify(params)
            $.ajax({
                url: 'http://<%=reqHost%>:<%=reqPort%>/ZxApi/m2_12.ashx',
                type: "POST",
                dataType: 'json',
                data: data,
                error: function (request) {      // 设置表单提交出错
                    mui.toast("系统错误，返回状态码为：" + request.status);
                },
                success: function (data) {
                    if(data.ecode==1000){
                        $("#list-content").html("");
                        console.log(data.num);
                        var list=data.tian_list
                        $.each(list, function (i) {
                            var item='<a class="item" href="/proposalDetail'+detail_id+'?id='+list[i].tian_id +'">' +
                                '<span class="circle"></span>' +
                                '<p class="anyou">'+list[i].anyou+'</p>' +
                                '<p class="bottom">' +
                                '<span class="left">保存</span>' +
                                '<span class="left">'+ list[i].creattime.split(" ")[0] +'</span>' +
                                '<span class="right">下载</span>' +
                                '</p>' +
                                '</a>'
                            $("#list-content").append(item);
                        })
                    }
                }
            });

        })

    })
</script>
</html>
