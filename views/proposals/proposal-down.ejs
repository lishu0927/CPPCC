<!DOCTYPE html>
<html>
<%-include ../base/checkHead.ejs%>
<body>
<div class="container">
    <%-include ../base/header.ejs%>
    <div class="wrap">
        <%for(var i=0 ;i<tian_list.length;i++){%>
        <a class="item" href="/proposalDetail3?type=1&id=<%=tian_list[i].tian_id%>">
            <span class="circle"></span>
            <p class="anyou"><%=tian_list[i].anyou%></p>
            <p class="bottom">
                <span class="left"><%=tian_list[i].creattime.split(" ")[0]%></span>
                <span class="right download"  data-tian-id="<%=tian_list[i].tian_id%>">下载</span>
            </p>
        </a>
        <%}%>
    </div>
</div>
</body>
<style>
    .container{
        padding: 42px 0 0 0;
    }
    .item{
        padding: 10px;
        border-bottom: 1px solid #bcbcbc;
        position: relative;
        display: block;
    }
    .item .circle{
        position: absolute;
        top:17px;
        left: 13px;
        background: #0071bd;
        width: 10px;
        height: 10px;
    }
    .item .anyou{
        line-height: 22px;
        color: #3b3b3b;
        text-indent: 20px;
        font-size: 13px;
    }
    .item .bottom{
        font-size: 12px;
        color: #0071bd;
        text-align: right;
        overflow-y: auto;
        padding-top: 3px;
    }
    .item .bottom .left{
        float: left;
        padding: 0 10px 0 0;
    }
    .item .bottom .right{
        float: right;
        padding: 0 5px;
    }
</style>
<script>
    $(".download").each(function () {
        $(this).click(function (e) {
            e.preventDefault()
            var filename=$(this).parent().prev(".anyou").html()
            console.log(filename)
            var params = {
                tian_kind:4,
                tian_id:$(this).attr("data-tian-id")
            }
            var data = JSON.stringify(params)
            $.ajax({  //取分组
                url: 'http://114.215.98.96:8011/ZxApi/m2_15.ashx',
                type: "POST",
                dataType: 'json',
                data: data,
                error: function (request) {      // 设置表单提交出错
                    mui.toast("系统错误");
                },
                success: function (data) {
                    if (data.ecode == 1000) {
                        try {
                            window.native.setDownload(filename,data.download_url)
                        }catch (err){

                        }
                        mui.toast("正在下载")
                    }
                }
            });
        })

    })
</script>
</html>
