<!DOCTYPE html>
<html>
<%-include ../base/checkHead.ejs%>
<style>
    .container{
        padding:42px 0 0 0;
    }
    .header-right{
        position: absolute;
        z-index: 10000000;
        height: 42px;
        text-align: center;
        line-height: 42px;
        top:0;
        right: 0;
        padding: 0 15px 0 10px;
        color: #fff;
        font-size: 14px;
        display: none;
    }
    .members-datail{
        position: relative;
        padding: 10px 0;
    }
    .members-datail .pic{
        position: absolute;
        right:30px;
        top:20px;
    }
    .members-datail .pic img{
        width: 105px;
        height: 135px;
    }
    .members-datail .row{
        color: #585757;
        padding: 10px 18px;
    }
    .members-datail .row span {
        color:#0071bd;
    }
</style>
<body>
<div class="container">
    <%-include ../base/header.ejs%>
    <a class="header-right" href="/editMember?id=<%=member.user_id%>">编辑</a>
    <div class="wrap">
        <div class="members-datail">
            <div class="pic">
                <img src="<%=member.headImage%>" />
            </div>
            <p class="row">
                <span>姓名：</span>
                <%=member.user_name%>
            </p>
            <p class="row">
                <span>性别：</span>
                <%=member.sex%>
            </p>
            <p class="row">
                <span>出生年月：</span>
                <%=member.brithdatetime.split(' ')[0]%>
            </p>
            <p class="row">
                <span>民族：</span>
                <%=member.minzu%>
            </p>
            <p class="row">
                <span>籍贯：</span>
                <%=member.jiguan%>
            </p>
            <p class="row">
                <span>党派：</span>
                <%=member.mianmao%>
            </p>
            <p class="row">
                <span>联系电话：</span>
                <%=member.mobile%>
            </p>
            <p class="row">
                <span>地址：</span>
                <%=member.address%>
            </p>
            <p class="row">
                <span>邮箱：</span>
                <%=member.email%>
            </p>
            <p class="row">
                <span>最高学历：</span>
                <%=member.xueli%>
            </p>
            <p class="row">
                <span>毕业院校：</span>
                <%=member.yuanxiao%>
            </p>
            <p class="row">
                <span>单位职务：</span>
                <%=member.fax%>
            </p>
            <p class="row">
                <span>职称：</span>
                <%=member.zhicheng%>
            </p>
            <p class="row">
                <span>界别：</span>
                <%=member.jiebie%>
            </p>
        </div>
    </div>
</div>
</body>
<script>
    var member_id="<%=member.user_id%>"
    var user_id=sessionStorage.getItem("user_id")
    if(user_id==member_id){
        $(".header-right").css("display","block")
    }
</script>

</html>
