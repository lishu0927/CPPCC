<!DOCTYPE html>
<html>
<%-include ../base/checkHead.ejs%>
<body>
<div class="container">
    <%-include ../base/header.ejs%>
    <a class="header-right" href="#picture">添加</a>
    <div class="wrap">
        <%if(group_list!=null&&group_list.length>0){%>
        <div class="weiyuan_list">
            <%for(var i=0;i<group_list.length;i++){var item = group_list[i];%>
                <div class="list-title">
                    <span class="left"><%=item.groupname%></span>
                    <span class="center"></span>
                    <a class="right" href="/editGroup?id=<%=item.grouporder%>">编辑</a>
                    <span class="deletes" id="<%=item.grouporder%>">×</span>
                </div>
                <%if(item.weiyuan_list.length==1){%>
                    <%for(var j=0;j<item.weiyuan_list.length;j++){
                        var weiyuan = item.weiyuan_list[j];%>
                        <div>
                            <span class="name" onclick="window.location.href='/editMember?id=<%=weiyuan.user_id%>'"><%=weiyuan.user_name%></span>
                            <span class="delete" id="<%=weiyuan.user_id%>">×</span>
                        </div>
                    <%}%>
                <%}else if(item.weiyuan_list.length>1){%>
                    <table width="100%">
                    <%for(var j=0;j<item.weiyuan_list.length;j++){
                        var weiyuan = item.weiyuan_list[j];%>
                        <td class="td">
                            <span onclick="window.location.href='/editMember?id=<%=weiyuan.user_id%>'"><%=weiyuan.user_name%></span>
                            <span class="delete" id="<%=weiyuan.user_id%>">×</span>
                        </td>
                    <%}%>
                    </table>
                <%}%>
            <%}%>
        </div>
        <%}%>
    </div>
    <div id="picture" class="mui-popover mui-popover-action mui-popover-bottom">
        <ul class="mui-table-view">
            <li class="mui-table-view-cell">
                <a href="/editGroup?id=00">添加组</a>
            </li>
            <li class="mui-table-view-cell">
                <a href="/addMember">添加成员</a>
            </li>
        </ul>
        <ul class="mui-table-view">
            <li class="mui-table-view-cell">
                <a href="#picture">取消</a>
            </li>
        </ul>
    </div>
</div>
</body>
<style>
    .container{
        padding: 42px 0 0 0;
    }
    .header-right{
        position: absolute;
        z-index: 10000000;
        height: 42px;
        text-align: center;
        line-height: 42px;
        top:0;
        right: 0;
        padding: 0 15px 0 10px;
        color: #fff;
        font-size: 14px;
    }
    .weiyuan_list{
        padding: 5px;
    }
    .weiyuan_list .name{
        padding-left: 80px;
        font-size: 14px;
        line-height: 28px;
        color: #3b3b3b;
    }
    .list-title{
        display: flex;
        align-items: center;
        line-height: 28px;
    }
    .list-title .left{
        padding: 0 20px;
        color: #3b3b3b;
        font-size: 14px;
    }
    .list-title .center{
        flex: 1;
        height: 1px;
        border-top: 1px dashed #585757;
    }
    .list-title .right{
        padding: 0 10px;
        font-size: 12px;
        color: #585757;
    }
    .list-title .delete{
        color: #3b3b3b;
        font-size: 18px;
        text-align: center;
        padding: 0 15px 0 0;
    }
    table{
        border-collapse:collapse;
        border: none;
        width: 80%;
        margin-left: 10%;
        margin-top: 10px;
    }
    table .td{
        display: inline-block;
        width: 33.333%;
        text-align: center;
        border: 1px solid #adaaaa;
        padding: 5px 0;
        font-size: 14px;
        color: #3b3b3b;
        position: relative;
    }
    table .td .delete{
        position: absolute;
        right: 0;
        top: 0;
        font-size: 18px;
        color: #3b3b3b;
        padding:0 3px;
    }
    .mui-popover.mui-popover-action.mui-active{
        background: #fff;
    }
    .mui-popover.mui-popover-action .mui-table-view .mui-table-view-cell{
        background: #e1edfd;
    }
    .mui-popover.mui-popover-action .mui-table-view .mui-table-view-cell a{
        color: #282828;
        font-size: 16px;
        font-family: "Microsoft YaHei";
    }


</style>
<script>
    $(".delete").click(function(){
        var id=this.id;
        mui.confirm('确认删除？', function(e) {
            alert
            if (e.index == 1) {
                var params = {
                    user_id: id
                }
                params = JSON.stringify(params);
                $.ajax({
                    url: 'http://114.215.98.96:8011/ZxApi/m2_04.ashx',
                    type: "POST",
                    dataType: 'json',
                    data: params,
                    success: function (data) {
                        if(data.ecode==1000){
                            mui.toast("删除成功");
                            setTimeout(function () {
                                location.reload();
                            },1000)
                        }else{
                            mui.toast("删除失败！");
                        }
                    }
                });
            } else {
                return;
            }
        })
    });
</script>
<style>


</style>
</html>
