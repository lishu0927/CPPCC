<!DOCTYPE html>
<html>
<%- include ../base/checkHead.ejs %>
<link rel="stylesheet" type="text/css" href="/css/mui.picker.min.css">
<script type='text/javascript' src='/js/jquery.form.js'></script>
<script type='text/javascript' src='/js/mui.picker.min.js'></script>
<script type='text/javascript' src='/js/mui.previewimage.js'></script>
<script type='text/javascript' src='/js/mui.zoom.js'></script>
<style>
    .container {
        padding: 42px 0 0 0;
    }
    .header-right {
        position: absolute;
        z-index: 10000000;
        height: 42px;
        text-align: center;
        line-height: 42px;
        top: 0;
        right: 0;
        padding: 0 15px 0 10px;
        color: #fff;
        font-size: var(--size14);
    }
    .wrap {
        padding: 10px 20px 10px 10px;
        position: relative;
    }
    .upload-content {
        position: absolute;
        left: 220px;
        top: 90px;

    }
    .member-pic {
        display: inline-block;
        width: 80px;
        height: 110px;
        margin: 0 20px;
        vertical-align: bottom;
    }
    .upload {
        position: relative;
        display: inline-block;
        background: #0071bd;
        border-radius: 3px;
        padding: 5px 8px;
        color: #fff;
        font-size: var(--size14);
    }
    .upload input {
        position: absolute;
        width: 100%;
        height: 100%;
        opacity: 0;
    }
    .mui-radio input[type=radio]:before {
        font-size: 20px !important;
        line-height: 1;
        text-decoration: none;
        color: #aaa;

    }
    .input-row {
        display: flex;
        margin-bottom: 10px;
        align-items: center;
    }
    .input-row input[type=text], select {
        height: 32px !important;
        width: auto !important;
        text-indent: 10px;
        display: inline-block;
        border: 1px solid #ddd !important;
        padding: 0;
        margin: 0;
        font-size: var(--size14);
        flex: 1;
        color: #3b3b3b;
    }
    .input-row label {
        color: #0071bd;
        min-width: 77px;
        display: inline-block;
        margin-right: 5px;
        white-space: nowrap;
        font-size: var(--size14);
        padding: 0;
        width: auto;
    }
    label.radio-lable {
        color: #3b3b3b !important;
        padding: 7px 0 5px 45px !important;
    }
    .input-row .mui-input-clear~.mui-icon-clear{
        top:7px
    }
    .input-row .date {
        width: 100%;
        height: 32px;
        border: 1px solid #ddd;
        text-align: left;
        color: #3b3b3b;
    }
    .mui-preview-image.mui-fullscreen {
        position: fixed;
        z-index: 20;
        background-color: #000;
    }
    .mui-preview-header,
    .mui-preview-footer {
        position: absolute;
        width: 100%;
        left: 0;
        z-index: 10;
    }
    .mui-preview-header {
        height: 44px;
        top: 0;
    }
    .mui-preview-footer {
        height: 50px;
        bottom: 0px;
    }
    .mui-preview-header .mui-preview-indicator {
        display: block;
        line-height: 25px;
        color: #fff;
        text-align: center;
        margin: 15px auto 4;
        width: 70px;
        background-color: rgba(0, 0, 0, 0.4);
        border-radius: 12px;
        font-size: var(--size16);
    }
    .mui-preview-image {
        display: none;
        -webkit-animation-duration: 0.5s;
        animation-duration: 0.5s;
        -webkit-animation-fill-mode: both;
        animation-fill-mode: both;
    }
    .mui-preview-image.mui-preview-in {
        -webkit-animation-name: fadeIn;
        animation-name: fadeIn;
    }
    .mui-preview-image.mui-preview-out {
        background: none;
        -webkit-animation-name: fadeOut;
        animation-name: fadeOut;
    }
    .mui-preview-image.mui-preview-out .mui-preview-header,
    .mui-preview-image.mui-preview-out .mui-preview-footer {
        display: none;
    }
    .mui-zoom-scroller {
        position: absolute;
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
        -webkit-box-align: center;
        -webkit-align-items: center;
        align-items: center;
        -webkit-box-pack: center;
        -webkit-justify-content: center;
        justify-content: center;
        left: 0;
        right: 0;
        bottom: 0;
        top: 0;
        width: 100%;
        height: 100%;
        margin: 0;
        -webkit-backface-visibility: hidden;
    }
    .mui-zoom {
        -webkit-transform-style: preserve-3d;
        transform-style: preserve-3d;
    }
    .mui-slider .mui-slider-group .mui-slider-item img {
        width: auto;
        height: auto;
        max-width: 100%;
        max-height: 100%;
    }
    .mui-android-4-1 .mui-slider .mui-slider-group .mui-slider-item img {
        width: 100%;
    }
    .mui-android-4-1 .mui-slider.mui-preview-image .mui-slider-group .mui-slider-item {
        display: inline-table;
    }
    .mui-android-4-1 .mui-slider.mui-preview-image .mui-zoom-scroller img {
        display: table-cell;
        vertical-align: middle;
    }
    .mui-preview-loading {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        display: none;
    }
    .mui-preview-loading.mui-active {
        display: block;
    }
    .mui-preview-loading .mui-spinner-white {
        position: absolute;
        top: 50%;
        left: 50%;
        margin-left: -25px;
        margin-top: -25px;
        height: 50px;
        width: 50px;
    }
    .mui-preview-image img.mui-transitioning {
        -webkit-transition: -webkit-transform 0.5s ease, opacity 0.5s ease;
        transition: transform 0.5s ease, opacity 0.5s ease;
    }
    @-webkit-keyframes fadeIn {
        0% {
            opacity: 0;
        }
        100% {
            opacity: 1;
        }
    }
    @keyframes fadeIn {
        0% {
            opacity: 0;
        }
        100% {
            opacity: 1;
        }
    }
    @-webkit-keyframes fadeOut {
        0% {
            opacity: 1;
        }
        100% {
            opacity: 0;
        }
    }
    @keyframes fadeOut {
        0% {
            opacity: 1;
        }
        100% {
            opacity: 0;
        }
    }

    p img {
        max-width: 100%;
        height: auto;
    }

</style>
<body>
<div class="container">
    <%- include ../base/header.ejs %>
    <span class="header-right" id="submit">确定</span>
    <div class="wrap">
        <div class="upload-content">
            <div class="upload" onclick="upImage()">
                上传/替换
            </div>
        </div>
        <div class="input-row">
            <label>照片:</label>
            <img src="<%= member.headImage %>" onerror="this.src='images/default3.png'" class="member-pic" id="img" data-preview-src=""/>
        </div>
        <div class="input-row">
            <label>选择分组:</label>
            <select id="groups">
            </select>
        </div>
        <div class="input-row mui-input-row">
            <label>姓名:</label>
            <input type="text" class="mui-input-clear"  value="<%= member.user_name %>" id="name" maxlength="25"/>
        </div>
        <div class="input-row">
            <label>姓别:</label>
            <div class="mui-input-row mui-radio mui-left">
                <label class="radio-lable">男</label>
                <input name="sex" type="radio" value="男">
            </div>
            <div class="mui-input-row mui-radio mui-left">
                <label class="radio-lable">女</label>
                <input name="sex" type="radio" value="女">
            </div>
        </div>
        <div class="input-row">
            <label>出生日期:</label>
            <button id='date' class="date"
                    data-options='{"type":"date","beginYear":1900,"endYear":2020}'><%= member.brithdatetime.split(" ")[0] %></button>
        </div>
        <div class="input-row mui-input-row">
            <label>联系电话:</label>
            <input type="text" class="mui-input-clear" value="<%= member.telephone %>" id="telephone" maxlength="25"/>
        </div>
        <div class="input-row mui-input-row">
            <label>民族:</label>
            <input type="text" class="mui-input-clear" value="<%= member.minzu %>" id="minzu" maxlength="25"/>
        </div>
        <div class="input-row mui-input-row">
            <label>籍贯:</label>
            <input type="text" class="mui-input-clear" value="<%= member.jiguan %>" id="jiguan" maxlength="25"/>
        </div>
        <div class="input-row mui-input-row">
            <label>党派:</label>
            <input type="text" class="mui-input-clear" value="<%= member.mianmao %>" id="mianmao" maxlength="25"/>
        </div>
        <div class="input-row mui-input-row">
            <label>手机:</label>
            <input type="text" class="mui-input-clear" value="<%= member.mobile %>" id="mobile" maxlength="25"/>
        </div>
        <div class="input-row mui-input-row">
            <label>地址:</label>
            <input type="text" class="mui-input-clear" value="<%= member.address %>" id="address" maxlength="50"/>
        </div>
        <div class="input-row mui-input-row">
            <label>邮箱:</label>
            <input type="text" class="mui-input-clear" value="<%= member.email %>" id="email" maxlength="25"/>
        </div>
        <div class="input-row mui-input-row">
            <label>学历:</label>
            <input type="text" class="mui-input-clear" value="<%= member.xueli %>" id="xueli" maxlength="25"/>
        </div>
        <div class="input-row mui-input-row">
            <label>毕业院校:</label>
            <input type="text" class="mui-input-clear" value="<%= member.yuanxiao %>" id="yuanxiao" maxlength="25"/>
        </div>
        <div class="input-row mui-input-row">
            <label>单位职务:</label>
            <input type="text" class="mui-input-clear" value="<%= member.fax %>" id="fax" maxlength="250"/>
        </div>
        <div class="input-row mui-input-row">
            <label>职称:</label>
            <input type="text" class="mui-input-clear" value="<%= member.zhicheng %>" id="zhicheng" maxlength="25"/>
        </div>
        <div class="input-row mui-input-row">
            <label>界别:</label>
            <input type="text" class="mui-input-clear" value="<%= member.jiebie %>" id="jiebie" maxlength="25"/>
        </div>
        <div class="input-row mui-input-row">
            <label>委员排序:</label>
            <input type="text" class="mui-input-clear" value="<%= member.order %>" id="order"/>
        </div>
    </div>
</div>
</body>

<script>
    var sSid=sessionStorage.getItem("user_id");
    mui.previewImage();
    //上传图片
    function upImage() {
        try {
            window.native.getImage('http://<%=reqHost%>:<%=reqPort%>/ZxApi/uploadfile.aspx','changeHeadimg')
        }catch (err){
        }
    }
    function changeHeadimg(data) {
        $('#img').attr("src", data.imgurl_list[0].imgurl);
    }
    (function ($) {
        $.init();
        var date = $('#date')[0];
        date.addEventListener('tap', function () {
            var optionsJson = this.getAttribute('data-options') || '{}';
            var options = JSON.parse(optionsJson);
            var picker = new $.DtPicker(options);
            picker.show(function (rs) {
                date.innerText = rs.y.text + '/' + rs.m.text + '/' + rs.d.text;
                picker.dispose();
            });
        }, false);
    })(mui);
    $(function () {
        $("input[name='sex'][value='<%= member.sex %>']").attr("checked", true);
        $("#groups").html("");
        $.ajax({  //取分组
            url: 'http://<%=reqHost%>:<%=reqPort%>/ZxApi/m2_10.ashx',
            type: "POST",
            dataType: 'json',
            data: {},
            error: function (request) {      // 设置表单提交出错
                mui.toast("系统错误");
            },
            success: function (data) {
                if (data.ecode == 1000) {
                    var list = data.group_list;
                    $.each(list, function (i) {
                        var option = '<option value="' + list[i].groupname + '">' + list[i].groupname + '</option>'
                        $("#groups").append(option);
                    })
                    $("#groups").find("option[value='<%= member.groupName %>']").attr("selected", true);
                }
            }
        });
    })

    //保存委员信息
    $('#submit').click(function () {
        var _self=this
        var key;
        var user_id='<%=member.user_id%>'
        var user_name=$.trim($('#name').val())
        var password='';
        var sex= $.trim($("input[name='sex']:checked").val());
        var brithdatetime= $.trim($('#date').text());
        var minzu= $.trim($('#minzu').val());
        var mianmao= $.trim($('#mianmao').val());
        var telephone= $.trim($('#telephone').val());
        var fax=$.trim($("#fax").val());
        var mobile= $.trim($('#mobile').val());
        var address=$.trim($('#address').val());
        var email= $.trim($('#email').val());
        var xueli= $.trim($('#xueli').val());
        var jiguan= $.trim($('#jiguan').val());
        var jiebie= $.trim($('#jiebie').val());
        var yuanxiao= $.trim($('#yuanxiao').val());
        var zhicheng= $.trim($('#zhicheng').val());
        var order= $.trim($('#order').val());
        var groupName= $.trim($('#groups').val());
        var headImage= $.trim($('#img').attr("src"));
        if(user_id==''||user_name==''){
            mui.toast("请填写姓名")
            return false
        }else if(brithdatetime==''){
            mui.toast("请填写出生日期")
            return false
        }else if(minzu==''|| mianmao==''||telephone==''||fax==''||mobile==''||address==''||email==''||
            xueli==''||jiguan==''||jiebie==''||yuanxiao==''||zhicheng=='' || order==''){
            $(".mui-input-clear").each(function () {
                if($(this).val()==''){
                    key=$(this).prev().html()
                    key=key.substring(0,key.length-1)
                    mui.toast("请填写"+key)
                    return false
                }
            })
        }else {
            var params = {
                user_id:user_id,
                user_name: user_name,
                password: password,
                sex: sex,
                brithdatetime: brithdatetime,
                minzu: minzu,
                mianmao: mianmao,
                telephone: telephone,
                fax: fax,
                mobile: mobile,
                address: address,
                email: email,
                xueli: xueli,
                jiguan: jiguan,
                jiebie: jiebie,
                yuanxiao: yuanxiao,
                zhicheng: zhicheng,
                groupName: groupName,
                order: order,
                headImage: headImage
            }
            var data = JSON.stringify(params)
            $.ajax({
                url: 'http://<%=reqHost%>:<%=reqPort%>/ZxApi/m2_06.ashx',
                type: "POST",
                dataType: 'json',
                data: data,
                error: function (request) {      // 设置表单提交出错
                    mui.toast("系统错误");
                },
                success: function (data) {
                    if (data.ecode == 1000) {
                        mui.toast("编辑成功！");
                        $(_self).unbind('click')
                        if(user_id==sSid) {
                            var params1 = { //如果编辑的是自己的信息, 需将更新后的信息存入sessionStorage中
                                user_id: user_id
                            }
                            var data1 = JSON.stringify(params1)
                            $.ajax({
                                url: 'http://<%= reqHost %>:<%= reqPort %>/ZxApi/m2_03.ashx',
                                type: "POST",
                                dataType: 'json',
                                data: data1,
                                error: function (request) {      // 设置表单提交出错
                                    mui.toast("系统错误");
                                },
                                success: function (data) {
                                    if (data.ecode == 1000) {
                                        sessionStorage.setItem("user", JSON.stringify(data.user_info));
                                        try {
                                            window.native.saveData("user", JSON.stringify(data.user_info));
                                        } catch (err) {
                                            //找不到原生发方法，可能是环境不是在android应用上打开的，或者调用方法不对
                                        }
                                    } else {
                                        mui.toast("系统出错")
                                    }
                                }
                            })
                        }
                        setTimeout(function () {
                            history.go(-1);
                        },1000);
                    } else {
                        mui.toast("编辑失败！");
                    }
                }
            });
        }
    });
</script>
</html>
