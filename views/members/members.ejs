<!DOCTYPE html>
<html>
<%-include ../base/checkHead.ejs%>
<style lang="stylus">
    .member-content{
        height: 100%;
        display: flex;
        flex-direction: column;
    }
    .member-row{
        flex: 1;
        width: 100%;
        display: flex;
        align-items: center;
        position: relative;
    }
    .member-row:before{
        content: '';
        position: absolute;
        bottom:0;
        left: 10%;
        height: 1px;
        width: 30%;
        background: #0071bd;
    }
    .member-row:after{
        content: '';
        position: absolute;
        bottom:0;
        left: 60%;
        height: 1px;
        width: 30%;
        background: #0071bd;
    }
    .member-row:last-child:before,.member-row:last-child:after{
        display: none;
    }
    .member-item{
        flex: 1;
        text-align: center;
    }
    .member-item:nth-child(2n+1){
        border-right: 1px solid #0071bd;
    }
    .member-item img{
        width: 40%;
    }
    .member-item p{
        color: #9a9898;
        font-size: 17px;
        margin-top: 5% !important;
    }
</style>
<body>
<div class="container">
    <%-include ../base/header-search.ejs%>
    <%-include ../base/footer-nav.ejs%>
    <div class="wrap">
        <div class="member-content">
            <div class="member-row">
                <div class="member-item" data-url="/membersMd">
                    <img src="/images/wymd.png">
                    <p>委员名单</p>
                </div>
                <div class="member-item" data-url="/proposals">
                    <img src="/images/zxta.png">
                    <p>政协提案</p>
                </div>
            </div>
            <div class="member-row">
                <div class="member-item" data-url="/social">
                    <img src="/images/sqmy.png">
                    <p>社情民意</p>
                </div>
                <div class="member-item" data-url="/mien">
                    <img src="/images/wyfc.png">
                    <p>委员风采</p>
                </div>
            </div>
            <div class="member-row">
                <div class="member-item" data-url="study">
                    <img src="/images/xxyd.png">
                    <p>学习园地</p>
                </div>
                <div class="member-item" data-url="/video">
                    <img src="/images/spdb.png">
                    <p>视频点播</p>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
<script>
    $(document).on('click','.member-item',function () {
        sessionStorage.setItem("studyList", "");
        sessionStorage.setItem("studyTop", 0);
        sessionStorage.setItem("mienList", "");
        sessionStorage.setItem("mienTop", 0);
        sessionStorage.setItem("videoList", "");
        sessionStorage.setItem("videoTop", 0);
        var url=$(this).attr("data-url")
        location.href=url
    })
</script>
</html>
