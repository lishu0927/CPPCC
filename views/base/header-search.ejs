<header class="header-search">
    <div class="search-box">
        <input type="text" placeholder="请输入您需要的内容" data-keyword="<%=keyword%>" id="info"/>
        <span class="header-icon-right" id="search">
            <img src="/images/icons/search.png">
        </span>
    </div>
</header>
<style>
    .header-search {
        position: fixed;
        top: 0;
        width: 100%;
        height: 48px;
        background-image: url("/images/search-bg.png");
        background-size: contain;
        padding: 9px 0;
        box-sizing: border-box;
    }

    .header-search .search-box {
        position: relative;
        box-sizing: border-box;
        width: 90%;
        height: 30px;
        margin-left: 5%;
        padding: 0 50px 0 0;
        border: 1px solid #eeeeee;
        background: #fff;
    }

    .header-search .search-box input {
        height: 100%;
        text-indent: 10px;
        display: inline-block;
        width: 100%;
        border: 0;
        outline: none;
        padding: 0;
        background: none;
        margin: 0;
        font-size: 14px;
    }

    .header-search .search-box span {
        position: absolute;
        right: 0;
        top: 2px;
        width: 50px;
        height: 24px;
        border-left: 2px solid #bcbcbc;
        text-align: center;
    }

    .header-search .search-box span img {
        height: 18px;
        margin-top: 3px;
    }
</style>
<script>
    var keyword=$("#info").attr("data-keyword");
    $("#info").val(keyword);
    $("#search").click(function () {
        var info = $("#info").val();
        location.href = "/search?keyword=" + info;
    });
</script>