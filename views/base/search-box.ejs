<div class="search-box">
    <input type="text" placeholder="请输入您需要的内容" data-keyword="<%=keyword%>" id="info"/>
    <span class="header-icon-right" id="search">
        <img src="/images/icons/search.png">
    </span>
</div>
<style>
    .search-box {
        position: relative;
        box-sizing: border-box;
        width: 100%;
        height: 34px;
        padding: 0 50px 0 0;
        border: 1px solid #00a0e9;
        background: #fff;
    }
    .search-box input {
        height: 100%;
        text-indent: 10px;
        display: inline-block;
        width: 100%;
        border: 0;
        outline: none;
        padding: 0;
        background: none;
        margin: 0;
        font-size: 14px;
    }
    .search-box span {
        position: absolute;
        right: 0;
        top: 2px;
        width: 50px;
        height: 24px;
        border-left: 1px solid #00a0e9;
        text-align: center;
    }
    .search-box span img {
        height: 18px;
        margin-top: 3px;
    }
</style>
<script>
    var keyword=$("#info").attr("data-keyword");
    $("#info").val(keyword)
    $("#search").click(function () {
        var info = $("#info").val();
        location.href = "/membersSearch?keyword=" + info;
    });
</script>