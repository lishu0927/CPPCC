<!DOCTYPE html>
<html>
<%-include ../base/checkHead.ejs%>
<body>
<div class="container">
    <%-include ../base/header-search-back.ejs%>
    <div class="wrap search-content">
        <%if(weiyuan_list==null&&tian_list==null&&article_list==null){%>
        <div class="empty">
            <img src="/images/search-empty.png">
            <p>没有找到您搜索的内容</p>
        </div>
        <%}%>


        <%if(weiyuan_list!=null&&weiyuan_list.length>0){%>
        <div class="weiyuan_list">
            <div class="weiyuan_content">
            <%for(var i=0;i<weiyuan_list.length;i++){%>
            <p><%= weiyuan_list[i].groupName%></p>
            <p><%= weiyuan_list[i].user_name%></p>
            <%}%>
            </div>
        </div>
        <%}%>

        <%if(tian_list!=null&&tian_list.length>0){%>
        <div class="tian_list">
            <div class="list-title">
                <span class="left">政协提案</span>
                <span class="center"></span>
                <span class="right">找到<%= tian_list.length%>条</span>
            </div>
            <%for(var i=0;i<tian_list.length;i++){%>
            <div class="item">
                <span class="circle"></span>
                <p class="anyou"><%= tian_list[i].anyou%></p>
            </div>
            <%}%>
        </div>
        <%}%>

        <%if(article_list!=null&&article_list.length>0){%>
        <div class="article_list">
            <div class="list-title">
                <span class="left">政协要闻</span>
                <span class="center"></span>
                <span class="right">找到<%= article_list.length%>条</span>
            </div>
            <ul class="list">
                <% for(var i = 0;i < article_list.length;i++){ %>
                <li class="item">
                    <a href="/newsDetail?id=<%= article_list[i].article_id %>">
                        <img class="image" src="<%= article_list[i].img_url %>">
                        <div class="info">
                            <p class="title mui-ellipsis"><%= article_list[i].title %></p>
                            <p class="desc mui-ellipsis-2"><%= article_list[i].zhaiyao %></p>
                            <p class="time"><%= article_list[i].add_time.split(' ')[0] %></p>
                        </div>
                    </a>
                </li>
                <%}%>
            </ul>
        </div>
        <%}%>
    </div>
</div>
</body>
<style>
    .container{
       padding: 48px 0 0 0;
    }
    .empty{
        position: absolute;
        top: 50%;
        transform: translate(0,-50%);
        text-align: center;
    }
    .empty img{
        width: 40%;
        margin-bottom: 3%;
    }
    .empty p{
        font-size: 17px;
        color: #9a9898;
    }
    .search-content .weiyuan_list{
        padding: 5px;
    }
    .weiyuan_content{
        background: #e1edfd;
        border-radius: 5px;
        padding: 20px;
    }
    .search-content .weiyuan_list p{
        line-height: 30px;
    }
    .tian_list .item{
        padding: 10px 20px 15px;
        border-bottom: 1px solid #bcbcbc;
        position: relative;
    }
    .tian_list .item .circle{
        position: absolute;
        top:17px;
        left: 20px;
        background: #0071bd;
        width: 10px;
        height: 10px;
    }
    .tian_list .item .anyou{
        line-height: 22px;
        color: #585757;
        text-indent: 20px;
        font-size: 15px;
    }
    .article_list{
        margin-top: 20px;
    }
    .list-title{
        display: flex;
        align-items: center;
    }
    .list-title .left{
        padding: 0 20px;
        color: #3b3b3b;
        font-size: 16px;
    }
    .list-title .center{
        flex: 1;
        height: 1px;
        border-top: 1px dashed #585757;
    }
    .list-title .right{
        padding: 0 20px;
        font-size: 14px;
        color: #585757;
    }
    .article_list .list {
        padding: 0;
    }
    .article_list .list .item {
        border-bottom: 1px solid #bcbcbc;
    }
    .article_list .list .item a {
        position: relative;
        width: 100%;
        display: block;
        padding: 15px 10px 10px 120px;
    }
    .article_list .list .item .image {
        position: absolute;
        top: 15px;
        left: 10px;
        width: 110px;
        height: 80px;
    }
    .article_list .list .item .info {
        padding-left: 10px;
    }
    .article_list .list .item .info .title {
        font-size: 16px;
        color: #323232;
        line-height: 24px;
    }
    .article_list .list .item .info .desc {
        color: #585757;
        line-height: 18px;
        height: 36px;
        font-size: 12px;
    }
    .article_list .list .item .info .time {
        color: red;
        font-size: 12px;
        line-height: 24px;
    }
</style>
<script>

</script>
<style>


</style>
</html>
