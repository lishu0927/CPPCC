<!DOCTYPE html>
<html>
<%-include ../base/checkHead.ejs%>
<style>
    .container{
        padding: 0 0 50px 0;
        -webkit-animation-name: slideOut;
        animation-name: slideOut;
    }
    .wrap{
        background: #f5f5f5;
    }
    .top{
        height: 100px;
        background-image: url("images/mine-bg.png");
        background-repeat: no-repeat;
        background-size: cover;
    }
    .exit{
        position: absolute;
        top:10px;
        right: 10px;
        color: #fff;
        font-size: 14px;
    }
    .mine{
        position: absolute;
        top:45px;
        left: 10px;
        right: 10px;
        border: 1px solid #eee;
        padding:10px;
        background: #fff;
    }
    .mine .mine-content{
        display: flex;
        align-items: center;
    }
    .mine .mine-content .left{
        width: 80px;
    }
    .mine .mine-content .left img{
        width: 70px;
        height: 70px;
        border-radius: 50%;
        border: 1px solid #ddd;
    }
    .mine .mine-content .right{
        flex: 1;
    }
    .mine .mine-content .right .name{
        color: #000;
        font-size: 18px;
    }
    .mine .mine-content .right .phone{
        color: #3b3b3b;
    }
    .list{
        margin-top: 50px;
    }
    .list li{
        height: 50px;
        line-height: 50px;
        background: #fff;
        margin-top:10px;
    }
    .list li a{
        display: flex;
    }
    .list li a .left{
        width: 46px;
        text-align: center;
    }
    .list li a .left img{
        height: 18px;
        vertical-align: middle;
    }
    .list li a p{
        font-size: 16px;
        color: #000;
        flex: 1;
    }
</style>
<body>
<div class="container">
    <%-include ../base/footer-nav.ejs%>
    <div class="wrap">
        <div class="top"></div>
        <div class="exit">退出登录</div>
        <div class="mine">
            <div class="mine-content">
                <div class="left">
                    <img src="images/default2.png" id="headImage" onerror="this.src='images/default2.png'"/>
                </div>
                <div class="right">
                    <p class="name" id="name"></p>
                    <p class="phone" id="phone"></p>
                </div>
            </div>
        </div>
        <ul class="list">
            <li>
                <a href="javascript:;" id="detail">
                    <div class="left">
                        <img src="images/icons/mine1.png" />
                    </div>
                    <p>我的信息</p>
                </a>
            </li>
            <li>
                <a href="/minePwd">
                    <div class="left">
                        <img src="images/icons/mine2.png" />
                    </div>
                    <p>修改密码</p>
                </a>
            </li>
            <li>
                <a href="/mineMsg">
                    <div class="left">
                        <img src="images/icons/mine3.png" />
                    </div>
                    <p>留言反馈</p>
                </a>
            </li>
        </ul>
    </div>
</div>
</body>

<script>
    var user=JSON.parse(sessionStorage.getItem('user'))
    var user_id=sessionStorage.getItem('user_id');

    $('#name').html(user.user_name);
    $('#headImage').attr("src",user.headImage);

    var mobile=user.mobile
    var telephone=user.telephone
    if(mobile != ''){
        $('#phone').html(mobile);
    }else {
        $('#phone').html(telephone);
    }

    $("#detail").click(function () {
        if(user_id==null || user_id<=0 || user_id==''){
            mui.toast("当前用户不支持此功能")
        }else{
            location.href='/membersDetail?id='+user_id
        }
    })

    $(".exit").click(function () {
        sessionStorage.setItem("manager_id","");
        try{
            window.native.saveData("manager_id", "");
        }catch (err){

        }
        location.href="/login"
    })
</script>

</html>
